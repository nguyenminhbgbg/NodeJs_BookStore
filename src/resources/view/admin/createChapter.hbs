<div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="tile">
          <h3 class="tile-title mt-4">Thên thông tin chương mới</h3>
                <form class="row" method="POST" action="/admin/chapter/createChapterData">
                    <div class="form-group col-md-12">
                        <label class="control-label">Tên sách: </label>
                        <select class="form-control form-control-sm ml-2 mr-2" name="bookId" required>
                            <option >-- Chọn tên sách --</option>
                            {{#each books}}
                            <option value={{this._id}}>{{this.bookName}}</option>
                            {{/each}}
                        </select>
                        {{!-- <input class="form-control" name="bookId" value="{{chapter.bookId}}" type="text"> --}}
                    </div>
                    <div class="form-group col-md-12">
                        <label class="control-label">Tên Chương: </label>
                        <input class="form-control" name="chapterName" value="{{chapter.chapterName}}" rows="5"  type="text" required>
                    </div>
                    <div class="form-group col-md-12" style="display: flex; flex-direction: column;">
                        <label class="control-label">Nội dung chương: </label>
                        <textarea class="form-control" name="content" rows="4" >{{chapter.content}}</textarea>
                    </div>
                    <div class="form-group col-md-12">
                        <label class="control-label">Số chương:</label>
                        <input class="form-control" name="NumberChapter" value="{{chapter.NumberChapter}}" type="text" required>
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-secondary mt-2 col-sm-1">Lưu lại</button>
                    </div>
               </form>
            </div>
        </div>  
          {{!-- <a class="btn btn-danger" href="/doc/table-data-table.html">Hủy bỏ</a> --}}
     </div>

</div>