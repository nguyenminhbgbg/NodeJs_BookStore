                        <input class="form-control" name="description" value="{{genre.description}}" rows="5"  type="text" required>
                    </div>
                    <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-secondary  mt-2 col-sm-1">Lưu lại</button>
                    </div>
               </form>
